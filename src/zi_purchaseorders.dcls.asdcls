@EndUserText.label: 'DCL for ZI_PurchaseOrders'
@MappingRole: true
define role ZI_PURCHASEORDERS {
    grant 
        select
            on
                ZI_PurchaseOrders
                    where
                                ( PurchaseOrderType ) =   aspect pfcg_auth (  M_BEST_BSA,
                                                                      BSART,
                                                                      actvt = '03' )
    and                    
         ( Plant ) ?=    aspect pfcg_auth (  M_BEST_WRK, WERKS, actvt = '03' )     

// and                    
