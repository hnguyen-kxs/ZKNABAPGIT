//                                                                          EKORG,
//                                                                          actvt = '03' )
//    and
//         ( _PurchaseOrder.PurchasingGroup ) ?= aspect pfcg_auth (   M_BEST_EKG,
//                                                                    EKGRP,
//                                                                    actvt = '03' )
//                        
//    and
//         ( _PurchaseOrderItem.Plant ) ?=    aspect pfcg_auth (  M_BEST_WRK,
//                                                                WERKS,
//                                                                actvt = '03' )                        
;
                            

}